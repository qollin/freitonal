<ui:UiBinder
 xmlns:ui='urn:ui:com.google.gwt.uibinder'
 xmlns:g='urn:import:com.google.gwt.user.client.ui'>
 
 <ui:style src="ListBoxView.css"/>
   
  <g:HTMLPanel>
  	<g:ListBox ui:field="list" addStyleNames='{style.listBox}'/>
	<g:HTMLPanel ui:field="labelPanel" addStyleNames='{style.labelPanel}'>
		<g:Label ui:field="label"/>
		<g:Image ui:field="closeImage" url="X.png" width="12px" height="12px" addStyleNames='{style.overlay}'/>
	</g:HTMLPanel>
  </g:HTMLPanel>
</ui:UiBinder>