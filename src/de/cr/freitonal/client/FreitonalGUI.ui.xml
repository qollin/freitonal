<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder
 xmlns:ui='urn:ui:com.google.gwt.uibinder'
 xmlns:g='urn:import:com.google.gwt.user.client.ui'
 xmlns:piece='urn:import:de.cr.freitonal.client.widgets.piece'>
  <g:HTMLPanel>
    <div id="header_wrapper">
      <div id="header">
        <h1>
          freitonal
        </h1>
        <p/>
        released so early there's no greek letter yet
        <p/>
      </div>
    </div>
    <div class="colmask fullpage">
      <div id="content" class="col1">
        
        <h1 id="titleText">
          St&uuml;ck suchen
        </h1>
        <span id="debug-currentState">
        </span>
        <div class="left">
          <piece:PieceView ui:field="pieceView"/>
        </div>
        <div class="middle">
          <div id="performanceForms">
            <!--
            {% with middle_forms.live as form %}
            {% include "classical/performance/live_form.html" %}
            {% endwith %}
            {% with middle_forms.location as form %}
            {% include "form_snippet.html" %}
            {% endwith %}
            {% with middle_forms.date as form %}
            {% include "classical/performance/date_form.html" %}
            {% endwith %}
            {% with middle_forms.instrumentation__allocated_instruments__performers as form %}
            {% include "classical/performance/performers_form.html" %}
            {% endwith %}
            -->
          </div>
          <div id="performanceActions" class="formActions">
            <button id="addPerformanceButton" class="fieldLabel">
              Aufnahme hinzuf&uuml;gen
            </button>
          </div>
        </div>
        
        <div class="right">
          <div id="recordingForms">
            <!--
            {% with right_forms.type as form %}
            {% include "form_snippet.html" %}
            {% endwith %}
            {% with right_forms.label as form %}
            {% include "form_snippet.html" %}
            {% endwith %}
            -->
          </div>
          <div id="recordingActions" class="formActions">
            <button id="addRecordingButton" class="fieldLabel">
              Tontr&auml;ger hinzuf&uuml;gen
            </button>
          </div>
        </div>
        
        <div id="piece" class="left">
          <div class="pagination" style="display:none">
            <span class="numresults">
              3 Resultate
            </span>
            <span class="current">
              Seite X von Y
            </span>
            <span class="prev">
              <a>
                previous
              </a>
            </span>
            <span class="next">
              <a>
                next
              </a>
            </span>
          </div>
          <table class="results_table" style="display:none">
            <thead>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
        <div id="performance" class="middle">
          <div class="pagination" style="display:none">
            <span class="numresults">
              3 Resultate
            </span>
            <span class="current">
              Seite X von Y
            </span>
            <span class="prev">
              <a>
                previous
              </a>
            </span>
            <span class="next">
              <a>
                next
              </a>
            </span>
          </div>
          <table class="results_table" style="display:none">
            <thead>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
        <div class="right" id="recording">
          <div class="pagination" style="display:none">
            <span class="numresults">
              3 Resultate
            </span>
            <span class="current">
              Seite X von Y
            </span>
            <span class="prev">
              <a>
                previous
              </a>
            </span>
            <span class="next">
              <a>
                next
              </a>
            </span>
          </div>
          <table class="results_table" style="display:none">
            <thead>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <div id="footer_wrapper">
      <div id="footer">
        <a href="http://djangoproject.com/">
          Powered by django
        </a>
        <br/>
        &copy; 2009 Britta and Collin Rogowski. All rights reversed. No harm done.
      </div>
    </div>
  </g:HTMLPanel>
  
</ui:UiBinder>
